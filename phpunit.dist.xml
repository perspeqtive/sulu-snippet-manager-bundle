<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" bootstrap="Tests/Application/bootstrap.php">
    <testsuites>
        <testsuite name="Sulu Snippet Manager Bundle">
            <directory>Tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory>.</directory>
            <exclude>
                <directory>vendor</directory>
            </exclude>
        </whitelist>
    </filter>

    <php>
        <env name="KERNEL_CLASS" value="PERSPEQTIVE\SuluSnippetManagerBundle\Tests\Application\Kernel"/>
    </php>
</phpunit>